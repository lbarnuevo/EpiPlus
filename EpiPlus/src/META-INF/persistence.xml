<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<!-- Persistence Provider -->
	<!-- RESOURCE-LOCAL: Application-managed transactions -->
	<!-- JTA: Container-managed transactions -->
	<persistence-unit name="epiplus-provider" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<!-- Entity Class -->
		<class>sample.db.pojos.Doctor</class>
		<class>sample.db.pojos.Patient</class>
		<class>sample.db.pojos.Episode</class>
		<class>sample.db.pojos.Symptom</class>
		<class>sample.db.pojos.Allergy</class>
		<class>sample.db.pojos.EmergencyContact</class>
		<class>sample.db.pojos.EpisodeSymptom</class>
		<class>sample.db.pojos.Medication</class>
		<class>sample.db.pojos.PatientAllergy</class>
		<class>sample.db.pojos.PatientMedication</class>

		<properties>
			<!-- Connection properties -->
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:./db/epiplus.db" />
			<!-- Fill if we need user and password -->
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- Controls logging level -->
			<property name="eclipselink.logging.level" value="INFO" />
			<!-- <property name="eclipselink.logging.level" value="ALL" /> -->

			<!-- JPA doesn't create the schema -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<!-- JPA destroys and recreates the schema -->
			<!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables" /> -->
		</properties>

	</persistence-unit>
</persistence>